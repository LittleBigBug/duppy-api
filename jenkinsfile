pipeline {
    agent { docker { image 'php' } }

    stages {
        stage('Update Dependencies') {
            steps {
                sh "chmod +x scripts/*"

                sh "scripts/clean.sh"
                sh "scripts/install-phive.sh --local"

                composer update
                tools/phive update
            }
        }

        stage('Execute Phing Tasks') {
            steps {
                vendor/bin/phing all
            }
        }
    }
}